package com.example.myapplication3; // 사용자의 패키지 이름 (kr.ac.doowon.makesalfapp)

import android.content.Intent;
import android.net.Uri;
import android.os.Bundle;
import android.view.LayoutInflater;
import android.view.View;
import android.widget.Button;
import android.widget.ImageView;
import android.widget.LinearLayout;
import android.widget.TextView;
import android.widget.Toast;

import androidx.activity.result.ActivityResultLauncher;
import androidx.activity.result.contract.ActivityResultContracts;
import androidx.appcompat.app.AlertDialog;
import androidx.appcompat.app.AppCompatActivity;

import com.bumptech.glide.Glide;
import com.google.android.material.textfield.TextInputEditText;

import java.util.ArrayList;
import java.util.List;

// 사용자의 패키지 이름에 맞게 R 임포트
// import kr.ac.doowon.makesalfapp.R;

public class MenuManagementActivity extends AppCompatActivity {

    private LinearLayout menuListContainer;
    private Button buttonAddMenu;
    private Uri selectedImageUri;
    private ActivityResultLauncher<Intent> galleryLauncher;

    // 다이얼로그의 ImageView를 참조하기 위한 멤버 변수
    private ImageView currentDialogImageView;

    private List<MenuItem> menuItems = new ArrayList<>();

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_menu_management);

        menuListContainer = findViewById(R.id.menu_list_container);
        buttonAddMenu = findViewById(R.id.button_add_menu);

        // --- 여기로 이동 ---
        // 갤러리 런처를 onCreate에서 등록합니다.
        galleryLauncher = registerForActivityResult(
                new ActivityResultContracts.StartActivityForResult(),
                result -> {
                    if (result.getResultCode() == RESULT_OK && result.getData() != null) {
                        selectedImageUri = result.getData().getData();
                        if (selectedImageUri != null && currentDialogImageView != null) {
                            // 멤버 변수에 저장된 ImageView에 이미지를 로드합니다.
                            Glide.with(this).load(selectedImageUri).into(currentDialogImageView);
                        }
                    }
                }
        );
        // --- ---

        buttonAddMenu.setOnClickListener(v -> openAddMenuDialog());
    }

    private void openAddMenuDialog() {
        View dialogView = LayoutInflater.from(this).inflate(R.layout.dialog_add_menu, null);

        // 안전하게 TextInputEditText 사용
        TextInputEditText editMenuName = dialogView.findViewById(R.id.edit_menu_name);
        TextInputEditText editMenuPrice = dialogView.findViewById(R.id.edit_menu_price);
        
        // 다이얼로그의 ImageView를 멤버 변수에 할당
        currentDialogImageView = dialogView.findViewById(R.id.image_menu_preview);
        
        Button buttonSelectImage = dialogView.findViewById(R.id.button_select_image);
        Button buttonSaveMenu = dialogView.findViewById(R.id.button_save_menu);

        AlertDialog dialog = new AlertDialog.Builder(this)
                .setView(dialogView)
                .create();

        // 다이얼로그가 닫힐 때 멤버 변수를 초기화 (메모리 누수 방지 및 다음 사용 준비)
        dialog.setOnDismissListener(d -> {
            currentDialogImageView = null;
            selectedImageUri = null; // 다음 메뉴 추가를 위해 URI도 초기화
        });

        // --- 삭제 ---
        // 갤러리 런처 설정 (이 부분을 onCreate로 이동했음)
        /*
        galleryLauncher = registerForActivityResult(
            ...
        );
        */
        // --- ---

        buttonSelectImage.setOnClickListener(v -> {
            Intent intent = new Intent(Intent.ACTION_GET_CONTENT);
            intent.setType("image/*");
            // 등록된 런처를 실행(launch)만 합니다.
            galleryLauncher.launch(intent);
        });

        buttonSaveMenu.setOnClickListener(v -> {
            String name = editMenuName.getText() != null ? editMenuName.getText().toString().trim() : "";
            String price = editMenuPrice.getText() != null ? editMenuPrice.getText().toString().trim() : "";

            if (name.isEmpty() || price.isEmpty()) {
                Toast.makeText(this, "메뉴 이름과 가격을 입력하세요.", Toast.LENGTH_SHORT).show();
                return;
            }

            // selectedImageUri는 갤러리 콜백에서 이미 멤버 변수에 저장되었습니다.
            MenuItem newItem = new MenuItem(name, price, selectedImageUri);
            menuItems.add(newItem);
            addMenuToLayout(newItem);

            dialog.dismiss();
        });

        dialog.show();
    }

    private void addMenuToLayout(MenuItem menuItem) {
        View menuItemView = LayoutInflater.from(this).inflate(R.layout.menu_item_entry, menuListContainer, false);

        ImageView imageMenu = menuItemView.findViewById(R.id.image_menu);
        TextView textName = menuItemView.findViewById(R.id.text_menu_name);
        TextView textPrice = menuItemView.findViewById(R.id.text_menu_price);

        textName.setText(menuItem.name);
        textPrice.setText(menuItem.price + "원");

        if (menuItem.imageUri != null) {
            Glide.with(this).load(menuItem.imageUri).into(imageMenu);
        }

        menuListContainer.addView(menuItemView);
    }

    public static class MenuItem {
        public String name;
        public String price;
        public Uri imageUri;

        public MenuItem() {}

        public MenuItem(String name, String price, Uri imageUri) {
            this.name = name;
            this.price = price;
            this.imageUri = imageUri;
        }
    }
}
