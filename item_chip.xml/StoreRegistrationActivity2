package kr.ac.doowon.makesalfapp;

import android.content.Intent;
import android.net.Uri;
import android.os.Bundle;
import android.provider.MediaStore;
import android.widget.Button;
import android.widget.CheckBox;
import android.widget.EditText;
import android.widget.ImageView;
import android.widget.Toast;

import androidx.activity.result.ActivityResultLauncher;
import androidx.activity.result.contract.ActivityResultContracts;
import androidx.appcompat.app.AppCompatActivity;

import com.bumptech.glide.Glide;
import com.google.firebase.auth.FirebaseAuth;
import com.google.firebase.auth.FirebaseUser;
import com.google.firebase.firestore.FirebaseFirestore;
import com.google.firebase.storage.FirebaseStorage;
import com.google.firebase.storage.StorageReference;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;
import java.util.UUID;

public class StoreRegistrationActivity extends AppCompatActivity {

    private EditText editStoreName, editStorePhone, editStoreAddress, editStoreDescription, editDiningDuration;
    private ImageView imageStorePhoto;
    private Button buttonAddPhoto, buttonManageMenu, buttonManageNews, buttonManageTables, buttonSave;
    private CheckBox checkMon, checkTue, checkWed, checkThu, checkFri, checkSat, checkSun;

    private FirebaseAuth auth;
    private FirebaseFirestore firestore;
    private FirebaseStorage storage;
    private FirebaseUser currentUser;

    private ActivityResultLauncher<Intent> galleryLauncher;
    private Uri selectedImageUri = null;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_store_registration);

        auth = FirebaseAuth.getInstance();
        firestore = FirebaseFirestore.getInstance();
        storage = FirebaseStorage.getInstance();
        currentUser = auth.getCurrentUser();

        if (currentUser == null) {
            Toast.makeText(this, "로그인이 필요합니다.", Toast.LENGTH_SHORT).show();
            finish();
            return;
        }

        initializeViews();
        setupGalleryLauncher();
        setupClickListeners();
    }

    private void initializeViews() {
        editStoreName = findViewById(R.id.edit_store_name);
        editStorePhone = findViewById(R.id.edit_store_phone);
        editStoreAddress = findViewById(R.id.edit_store_address2);
        editStoreDescription = findViewById(R.id.edit_store_description);
        editDiningDuration = findViewById(R.id.edit_dining_duration);
        imageStorePhoto = findViewById(R.id.image_store_photo);

        buttonAddPhoto = findViewById(R.id.button_add_store_photo);
        buttonManageMenu = findViewById(R.id.button_manage_menu);
        buttonManageNews = findViewById(R.id.button_manage_news);
        buttonManageTables = findViewById(R.id.button_manage_tables);
        buttonSave = findViewById(R.id.button_save_store_info);

        checkMon = findViewById(R.id.check_mon);
        checkTue = findViewById(R.id.check_tue);
        checkWed = findViewById(R.id.check_wed);
        checkThu = findViewById(R.id.check_thu);
        checkFri = findViewById(R.id.check_fri);
        checkSat = findViewById(R.id.check_sat);
        checkSun = findViewById(R.id.check_sun);
    }

    private void setupGalleryLauncher() {
        galleryLauncher = registerForActivityResult(
                new ActivityResultContracts.StartActivityForResult(),
                result -> {
                    if (result.getResultCode() == RESULT_OK && result.getData() != null) {
                        selectedImageUri = result.getData().getData();
                        if (selectedImageUri != null) {
                            Glide.with(this).load(selectedImageUri).into(imageStorePhoto);
                        }
                    }
                });
    }

    private void setupClickListeners() {
        buttonAddPhoto.setOnClickListener(v -> {
            Intent intent = new Intent(Intent.ACTION_PICK, MediaStore.Images.Media.EXTERNAL_CONTENT_URI);
            galleryLauncher.launch(intent);
        });

        buttonManageMenu.setOnClickListener(v -> {
            Intent intent = new Intent(StoreRegistrationActivity.this, MenuManagementActivity.class);
            startActivity(intent);
        });

        buttonManageNews.setOnClickListener(v -> {
            Intent intent = new Intent(StoreRegistrationActivity.this, NewsManagementActivity.class);
            startActivity(intent);
        });

        buttonManageTables.setOnClickListener(v -> {
            Intent intent = new Intent(StoreRegistrationActivity.this, TableInfoActivity.class);
            startActivity(intent);
        });

        buttonSave.setOnClickListener(v -> saveStoreInfo());
    }

    private void saveStoreInfo() {
        String name = editStoreName.getText().toString().trim();
        String phone = editStorePhone.getText().toString().trim();
        String address = editStoreAddress.getText().toString().trim();
        String description = editStoreDescription.getText().toString().trim();
        String duration = editDiningDuration.getText().toString().trim();

        if (name.isEmpty() || address.isEmpty() || selectedImageUri == null) {
            Toast.makeText(this, "가게 이름, 주소, 대표 사진은 필수입니다.", Toast.LENGTH_SHORT).show();
            return;
        }

        Toast.makeText(this, "가게 정보 저장 중...", Toast.LENGTH_LONG).show();
        buttonSave.setEnabled(false);

        uploadImageAndSaveData(name, phone, address, description, duration);
    }

    private void uploadImageAndSaveData(String name, String phone, String address, String description, String duration) {
        StorageReference storageRef = storage.getReference();
        String imageFileName = "store_images/" + UUID.randomUUID().toString() + ".jpg";
        StorageReference imageRef = storageRef.child(imageFileName);

        imageRef.putFile(selectedImageUri)
                .addOnSuccessListener(taskSnapshot -> imageRef.getDownloadUrl().addOnSuccessListener(downloadUri ->
                        saveDataToFirestore(name, phone, address, description, duration, downloadUri.toString())
                ))
                .addOnFailureListener(e -> {
                    Toast.makeText(this, "이미지 업로드 실패: " + e.getMessage(), Toast.LENGTH_SHORT).show();
                    buttonSave.setEnabled(true);
                });
    }

    private void saveDataToFirestore(String name, String phone, String address, String description, String duration, String imageUrl) {
        String ownerUid = currentUser.getUid();

        Map<String, Object> storeData = new HashMap<>();
        storeData.put("ownerUid", ownerUid);
        storeData.put("name", name);
        storeData.put("phone", phone);
        storeData.put("address", address);
        storeData.put("description", description);
        storeData.put("diningDurationMinutes", Integer.parseInt(duration));
        storeData.put("mainImageUrl", imageUrl);
        storeData.put("holidays", getHolidayData());
        storeData.put("status", "pending");

        firestore.collection("stores").add(storeData)
                .addOnSuccessListener(documentReference -> {
                    Toast.makeText(this, "가게 정보가 성공적으로 저장되었습니다.", Toast.LENGTH_SHORT).show();
                    firestore.collection("users").document(ownerUid)
                            .update("storeId", documentReference.getId(), "accountType", "owner_pending");
                    finish();
                })
                .addOnFailureListener(e -> {
                    Toast.makeText(this, "정보 저장 실패: " + e.getMessage(), Toast.LENGTH_SHORT).show();
                    buttonSave.setEnabled(true);
                });
    }

    private List<String> getHolidayData() {
        List<String> holidays = new ArrayList<>();
        if (checkMon.isChecked()) holidays.add("MON");
        if (checkTue.isChecked()) holidays.add("TUE");
        if (checkWed.isChecked()) holidays.add("WED");
        if (checkThu.isChecked()) holidays.add("THU");
        if (checkFri.isChecked()) holidays.add("FRI");
        if (checkSat.isChecked()) holidays.add("SAT");
        if (checkSun.isChecked()) holidays.add("SUN");
        return holidays;
    }
}
