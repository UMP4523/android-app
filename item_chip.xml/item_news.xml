<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tag_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대표"
            android:textColor="#FF5023"
            android:background="@drawable/border_rounded_grey"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tag_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="소식"
            android:textColor="#AAAAAA"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="소식 제목"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/text_news_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="소식 내용이 여기에 표시됩니다..."
        android:lineSpacingExtra="4dp"/>

    <TextView
        android:id="@+id/text_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="2025.10.11"
        android:textColor="#AAAAAA"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#F0F0F0"/>

</LinearLayout>
