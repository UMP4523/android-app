<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="StoreRegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가게 정보 등록"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp"/>

        <!-- 1. 가게 이름 -->
        <EditText
            android:id="@+id/edit_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="가게 이름"
            android:background="@drawable/border_rounded_grey"
            android:padding="12dp"/>

        <!-- 가게 사진 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="가게 대표 사진"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/image_store_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:src="@android:drawable/ic_menu_camera"
            android:contentDescription="가게 대표 사진"/>

        <Button
            android:id="@+id/button_add_store_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="사진 추가/변경"/>

        <!-- 2. 가게 전화번호 -->
        <EditText
            android:id="@+id/edit_store_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="가게 전화번호"
            android:inputType="phone"
            android:background="@drawable/border_rounded_grey"
            android:padding="12dp"/>

        <!-- 3. 가게 위치 -->
        <EditText
            android:id="@+id/edit_store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="가게 주소"
            android:background="@drawable/border_rounded_grey"
            android:padding="12dp"/>

        <!-- 4. 가게 소식 관리 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="가게 소식 관리"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_rounded_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="?attr/colorPrimary"
                    android:contentDescription="소식 아이콘" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소식 목록 설정"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="고객에게 보여줄 가게의 새로운 공지사항이나 이벤트를 등록합니다."/>
            <Button
                android:id="@+id/button_manage_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="소식 관리 화면으로 이동"/>
        </LinearLayout>

        <!-- 5. 가게 메뉴 관리 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="가게 메뉴 관리"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_rounded_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    app:tint="?attr/colorPrimary"
                    android:contentDescription="메뉴 아이콘" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="메뉴 목록 설정"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="가게에서 판매하는 메뉴의 카테고리, 이름, 가격, 사진 등을 설정합니다."/>
            <Button
                android:id="@+id/button_manage_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="메뉴 관리 화면으로 이동"/>
        </LinearLayout>

        <!-- 6. 가게 정보 (상세 설명) -->
        <EditText
            android:id="@+id/edit_store_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="가게 상세 정보 (소개글 등)"
            android:minLines="3"
            android:gravity="top"
            android:background="@drawable/border_rounded_grey"
            android:padding="12dp"/>

        <!-- 7. 예약 기준 (식사 시간, 테이블 정보 등) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="예약 기준 설정"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/edit_dining_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="평균 식사 시간 (분)"
            android:inputType="number"
            android:background="@drawable/border_rounded_grey"
            android:padding="12dp"/>

        <Button
            android:id="@+id/button_manage_tables"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테이블 설정"/>

        <!-- 8. 휴무일 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="휴무일 설정"/>

        <LinearLayout
            android:id="@+id/holiday_checkbox_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:flexWrap="wrap">
            <CheckBox android:id="@+id/check_mon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="월"/>
            <CheckBox android:id="@+id/check_tue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="화"/>
            <CheckBox android:id="@+id/check_wed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="수"/>
            <CheckBox android:id="@+id/check_thu" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="목"/>
            <CheckBox android:id="@+id/check_fri" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="금"/>
            <CheckBox android:id="@+id/check_sat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="토"/>
            <CheckBox android:id="@+id/check_sun" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="일"/>
        </LinearLayout>

        <!-- 저장 버튼 -->
        <Button
            android:id="@+id/button_save_store_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="저장하기"/>

    </LinearLayout>
</ScrollView>
