<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- ▼▼▼ ID: image_post_thumbnail ▼▼▼ -->
    <ImageView
        android:id="@+id/image_post_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray"
        android:contentDescription="게시글 썸네일" />

    <!-- 텍스트 컨테이너 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_post_thumbnail"
        android:layout_marginEnd="16dp">

        <!-- ID: text_post_title (Adapter에서 이미 사용 중) -->
        <TextView
            android:id="@+id/text_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="게시글 제목입니다"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- ▼▼▼ ID: text_post_snippet ▼▼▼ -->
        <TextView
            android:id="@+id/text_post_snippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="게시글 내용의 일부가 여기에 표시됩니다. 내용이 길어지면 잘립니다..."
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- ID: text_post_date (Adapter에서 이미 사용 중) -->
        <TextView
            android:id="@+id/text_post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="2025.10.11"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
