package com.example.myapplication;

import java.io.Serializable;
import java.util.ArrayList;

public class BoardPost implements Serializable {

    private String title;        // 제목
    private String content;      // 내용
    private String userName;     // 작성자
    private String date;         // 작성일
    private ArrayList<String> imageUris; // 등록된 사진들
    private String thumbnailUri; // 첫 번째 이미지 (썸네일)

    // ✅ 기본 생성자
    public BoardPost() {}

    // ✅ 전체 필드 포함 생성자
    public BoardPost(String title, String content, String userName, String date, ArrayList<String> imageUris) {
        this.title = title;
        this.content = content;
        this.userName = userName;
        this.date = date;
        this.imageUris = imageUris;

        // 첫 번째 이미지를 썸네일로 자동 지정
        if (imageUris != null && !imageUris.isEmpty()) {
            this.thumbnailUri = imageUris.get(0);
        } else {
            this.thumbnailUri = null;
        }
    }

    // ✅ 사용자명 생략 버전 (익명)
    public BoardPost(String title, String content, ArrayList<String> imageUris, String date) {
        this(title, content, "익명", date, imageUris);
    }

    // ✅ Getter & Setter
    public String getTitle() { return title; }
    public void setTitle(String title) { this.title = title; }

    public String getContent() { return content; }
    public void setContent(String content) { this.content = content; }

    public String getUserName() { return userName; }
    public void setUserName(String userName) { this.userName = userName; }

    public String getDate() { return date; }
    public void setDate(String date) { this.date = date; }

    public ArrayList<String> getImageUris() { return imageUris; }
    public void setImageUris(ArrayList<String> imageUris) {
        this.imageUris = imageUris;
        // 이미지 리스트가 갱신되면 썸네일도 자동 갱신
        if (imageUris != null && !imageUris.isEmpty()) {
            this.thumbnailUri = imageUris.get(0);
        } else {
            this.thumbnailUri = null;
        }
    }

    public String getThumbnailUri() { return thumbnailUri; }
    public void setThumbnailUri(String thumbnailUri) { this.thumbnailUri = thumbnailUri; }
}
