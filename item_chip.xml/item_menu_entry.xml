<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_menu_photo"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/tag_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대표"
            android:textColor="#FF5023"
            android:background="@drawable/border_rounded_grey"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등심세트 (2인기준)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/text_menu_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="맛있게 숙성된 등심과 두가지 부위"/>

        <TextView
            android:id="@+id/text_menu_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="155,000원"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_menu_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/darker_gray"/>

</androidx.constraintlayout.widget.ConstraintLayout>
